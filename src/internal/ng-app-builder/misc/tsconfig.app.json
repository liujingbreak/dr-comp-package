{
	"compilerOptions": {
		"baseUrl": ".",
	 	"typeRoots": [
			"node_modules/@types",
			"node_modules/@dr-types",
			"node_modules/dr-comp-package/wfh/types"
		],
		"jsx": "preserve",
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true,
		"lib": [
			"dom",
			"es2015",
			"es2016",
			"es2017",
			"webworker",
			"dom.iterable",
			"scripthost"
		],
		"removeComments": true,
		"declaration": false,
		"sourceMap": true,
		"module": "es2015",
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noUnusedLocals": true,
		"target": "ES5",
		"moduleResolution": "Node",
		"preserveSymlinks": false,
		"importHelpers": true,
		"downlevelIteration": true,
		"strictNullChecks": false,
		"resolveJsonModule": true,
		"paths": {
			"@angular/*": ["node_modules/@angular/*"],
			"@angularclass/*": ["node_modules/@angularclass/*"]
		}
	}
}
