{
	"extends": "./tsconfig-base.json",
	"compilerOptions": {
    "rootDir": "../redux-toolkit-observable",
    "target": "ES6",
    "module": "ES2020",
    "outDir": "../redux-toolkit-observable/es",
    "declaration": true,
    "strict": true,
    "composite": true,
    "sourceMap": false,
		"inlineSourceMap": false,
		"inlineSources": false,
  },
  "include": [
    "../redux-toolkit-observable/*.ts"
  ],
  "exclude": [
    "../redux-toolkit-observable/es/**/*",
    "../redux-toolkit-observable/dist/**/*",
    "../redux-toolkit-observable/example/**/*.ts",
    "../redux-toolkit-observable/template/**/*.ts"
  ]
}
