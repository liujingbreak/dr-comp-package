{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"declaration": true,
		"module":"commonjs",
		"target":"es2016",
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": false,
		"moduleResolution": "node",
		"sourceMap": true,
		"skipLibCheck": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noUnusedLocals": true,
		"preserveSymlinks": true,
		"lib": ["es2016",
			"es2015",
			"dom"
		],
		"pretty": true,
		"typeRoots": [
			"../node_modules/@types"
		]
	},
	
	"include": ["ts/**/*.ts"]
}
